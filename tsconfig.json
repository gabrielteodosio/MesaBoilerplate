{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./app/components/*"],
      "@models/*": ["./app/models/*"],
      "@screens/*": ["./app/screens/*"],
      "@theme/*": ["./app/theme/*"],
      "@transitions/*": ["./app/theme/transitions/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["index.js", "app", "test", "storybook"]
}
